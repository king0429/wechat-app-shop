/* pages/mall/mall.wxss */
page{
  height: 100%;
}
swiper{
   height: 350rpx; 
}
.swiper{
  width: 100%;
  height: 100%;
}
.mallMenu{
  display: flex;
  height: 180rpx;
  font-size: 14px;
  border-bottom: 1px solid #dedede;
}
.mallMenu view{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mallMenu view image{
  width: 90rpx;
  height: 90rpx;
  margin-top: 20rpx;
}
.mallMenu view text{
  margin-top: 10rpx;
  color: #333;
}

.info-title text{
  display: block;
  width: 22%;
  border-left: 5px solid #00a0e9;
  line-height: 40rpx;
  color: #999;
  margin-left: 10rpx;
  text-align: center;
  font-size: 14px;
}
.info-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border-bottom: 1px solid #dedede;
}
.info-item{
  padding: 0 ;
  position: relative;
  margin-top: 20rpx;
  height: 360rpx;
  width: 48%;
  font-size: 14px;
}
.info-item image{
  width: 360rpx;
  height: 360rpx;
}
.info-item .cat{
  height: 60rpx;
  line-height: 60rpx;  
  position: absolute;
  top: -1rpx;
  left: -1rpx; 
  text-align: left;
  font-size: 14px;
}
.cat image{
  width: 70rpx;
  height:70rpx;
}