page{
  min-height: 100%;
  background: #f8f8f8;
  font-size: 14px;
}
.banner{
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #333;
}
.title{
  font-size: 14px;
}
.num{
  width: 300rpx;
  background: #38adff;
  color: #fff;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 16px;
  margin: 10rpx 0;
  border-radius: 36rpx;
}
.tip{
  font-size: 14px;
  color: #ccc;
}
.listTitle{
  font-size: 14px;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #dedede;
}
.listTitle text{
  display: inline-block;
  border-bottom: 3px solid #38adff;
  height: 93%;
  margin-left: 20rpx;
  color: #333;
  padding-right: 30rpx;
}
.listInfo{
  padding: 20rpx 30rpx;
}
.listItem{
  display: flex;
  height: 130rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #dedede;
}
.listItem view:first-child{
  display: flex;
  align-items: center;
  width: 70%;
}
.goods{
  width: 60%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 15rpx;
}
.listItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.money{
  color: #ff0100;
}
.bind{
  width: 50%;
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 24rpx;
  background: #38adff;
  color: #fff;
  text-align: center;
}