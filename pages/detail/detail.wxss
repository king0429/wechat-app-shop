.model{
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, .7);
  position: fixed;
  top: 0;
  left: 0; 
  display: flex;
  align-items: flex-end;
  z-index: 9;
}
.select{
  width: 100%;
  background: #fff;
  padding: 0 25rpx;
  height: 900rpx;
}
.select .info {
  height: 115rpx;
  position: relative;
  border-bottom: 1px solid #dedede;
  padding-top: 40rpx;
}
.select .info image:first-child{
  width: 220rpx;
  height: 220rpx;
  border-radius: 5px;
  border: 1px solid #dedede;
  position: absolute;
  bottom: 25rpx;
}
.select .info view{
  margin-left: 260rpx;
  font-size: 16px;
  color: #333;
}
.select .info>view:nth-child(2){
  color: #ff0100;
  font-size: 18px;
  line-height: 1.2;
}
.select .info>view:nth-child(3){
  font-size: 14px;
  line-height: 1.2;
  margin-top: 10rpx;
}
.select .info image:last-child{
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: -14rpx; 
  top: 13rpx; 
}
.color{
  padding: 20rpx 0;
  border-bottom: 1px solid #dedede;
}
.color view:first-child{
  font-size: 14px;
  line-height: 18px;
}
.color view:last-child{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.color view:last-child text{
  display: block;
  padding: 0 20rpx;
  height: 60rpx;
  font-size: 12px;
  text-align: center;
  background: #eaeaea;
  border-radius: 5px;
  line-height: 60rpx;
  color: #333;
  margin:20rpx 50rpx 0 0;
}
.size{
  padding: 20rpx 0;  
  border-bottom: 1px solid #dedede;
}
.size view:first-child{
  font-size: 14px;
  line-height: 18px;
}
.size view:last-child{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.size view:last-child text{
  display: block;
  padding: 0 20rpx;
  height: 52rpx;
  font-size: 12px;
  text-align: center;
  background: #eaeaea;
  border-radius: 3px;
  line-height: 52rpx;
  color: #333;
  margin:20rpx 50rpx 0 0;
}
.cal{
  display: flex;
  flex-direction: row-reverse;
  height: 110rpx;
  border-bottom: 1px solid #dedede;
}
.cal view{
  height: 60rpx;
  width: 90rpx;
  text-align: center;
  background: #dbdbdb;
  border-radius: 3px;
  margin: 25rpx 0;
  line-height: 60rpx;
}
.cal view:nth-child(2){
  margin: 25rpx 10rpx;
  font-size: 14px;
}
.white{
