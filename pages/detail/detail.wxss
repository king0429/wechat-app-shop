page{
  height: 100%;
}
.container{
  height: 100%
}
.swiperWrap{
  position: relative;
}
.swiper{
  height: 750rpx;
}
.swiper image{
  width: 100%;
  height: 100%;
}
.current{
  position: absolute;
  right: 18rpx;
  bottom: 15rpx;
  color: #999;
}
.item{
  display: flex;
  padding: 10px 20rpx;
  justify-content: space-between;
  height: 100rpx;
  border-bottom: 1px solid #dedede;
}
.item .itemTitle{
  width: 100%;
  line-height: 1.8;
  color: #333;
  font-size: 16px;
  padding: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.leftItem{
  width: 60%;
}
.leftItem view:nth-child(2){
  font-size: 14px;
  color: #999;
  line-height: 1.6
}
.prc text{
  margin-right: 15rpx;
}
.prc text:nth-child(1){
  color:#ff0100;
}
.rightItem{
  width: 40%;
}
.rightItem button{
  width: 170rpx;
  height: 70rpx;
  background: #ff0100;
  font-size: 14px;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  opacity: .7;
  border-radius: 10rpx;
  float: right;
  margin-top: 20rpx;
  border:1px solid #fff;
  padding: 0;
}
.break{
  height: 20rpx;
  background: #f0f0f0;
}
.infoTitle{
  height: 80rpx;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
}
.infoTitle>view{
  width: 180rpx;
  line-height: 80rpx;
  color: #666;
  text-align: center;
  border-bottom: 3px solid #00a0e9;
  font-size: 14px;
  height: 96%;
}
.info{
  margin-bottom: 110rpx;
}
.imgbox image{
  width: 100%;
}
.btnList{
  width: 100%;
  display: flex;
  height: 110rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.btn{
  display: flex;
  width: 330rpx;
  border-top: 1px solid #dedede;
  color: #999;
}
.btn>view{
  display: flex;
  flex-direction: column-reverse;
  width: 33%;
  text-align: center;
  font-size: 12px;
  align-items: center;
}
.btn image{
  width: 50rpx;
  height: 50rpx;
}
.btn text{
  margin-top: 6rpx;
}
