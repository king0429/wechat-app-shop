/* pages/mine/mine.wxss */
page{
  height: 100%;
  background: #f8f8f8;
  font-size: 14px;
}
.banner{
  width: 100%;
  height: 247rpx;
  background: #00a1ea;
  text-align: center;
  color:#fff;
}
.banner image{
  width: 126rpx;
  height: 126rpx;
  border: 15rpx solid rgba(255,255,255,.3);
  border-radius: 50%;
  /* margin-top: 100rpx; */
}
.banner .username{
  font-size: 14px;
  margin-top: 10rpx;
}
.withdrawTitle{
  display: flex;
  padding:  0 20rpx;
  justify-content: space-between;
  height: 80rpx;
  border-top: 1px solid #dedede;
  line-height: 80rpx;
  background: #fff;
  color: #666;
}
.withdrawTitle view:nth-child(2){
  display: flex;
  align-items: center;
  color: #999;
}
.withdrawTitle image{
  width: 25rpx;
  height: 35rpx;
  margin-left: 10rpx;
}
.break{
  height: 20rpx;
}
.statusList{
  display: flex;
  background: #fff;
  height: 140rpx;
  border: 1px solid #dedede;
  border-left: none;
  border-right: none;
  color: #999;
}
.status{
  text-align: center;
  width: 25%;
}
.status view{
  font-size: 14px;
}
.status image{
  width: 70rpx;
  height: 70rpx;
  margin-top: 10rpx;
}
.status view{
  margin-top: -10rpx;
  font-size: 14px;
}
.functionList{
  height: 130rpx;
  background: #fff;
  font-size: 14px;
  display: flex;
  padding: 20rpx 0;
  color:#999;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
}
.fun{
  text-align: center;
  width: 25%;
}
.fun image{
  width: 70rpx;
  height: 70rpx;
}
.fun view{
  font-size: 14px;
}
.activeTitle{
  height: 80rpx;
  padding-left: 20rpx;
  background: #fff;
  line-height: 80rpx;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;  
  color: #666;
}
.activeList{
  height: 150rpx;
  background: #fff;
  font-size: 14px;
  display: flex;
  padding: 20rpx 10rpx;
  color:#999;
  border-bottom: 1px solid #dedede;
}
.activeItem{
  width: 25%;
  text-align: center;
  margin-top: 15rpx;
  color: #333;
}
.activeItem image{
  height: 70rpx;
  width: 70rpx;
}
.activeItem>view{
  margin-top: 15rpx;
}
.menuTitle{
  height: 100rpx;
  padding: 0 20rpx; 
  display: flex;
  justify-content: space-between;
  background: #fff;
  align-items: center;
  border-top: 1px solid #dedede;
  font-size: 14px;
  color: #333;
}
.menuTitle image{
  width: 30rpx;
  height: 40rpx;
}
.menu .menuTitle:last-child{
  border-bottom: 1px solid #dedede;
}
.contact{
  position: relative;
}
.contact view{
  position: absolute;
  opacity: 0;
}
.paycar{
  display: flex;
  align-items: center;
}
.paycar view{
  height: 30rpx;
  width: 30rpx;
  background: #ff0100;
  margin-left: 10rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  border-radius: 50%;
  font-size: 12px;
}