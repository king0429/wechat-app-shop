/* pages/membership/membership.wxss */
Page{
  width: 100%;
  height: 100%;
}
.container-full{
  height: 100%;
  background: #f0f0f0;
}
.cardBG{
  width: 100%;
  height: 418rpx;
  padding-top: 15rpx;
  text-align: center;
  position: relative;
}
.cardBG image{
  width: 712rpx;
  height: 420rpx;
}
.shopname{
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  font-size: 16px;
  color: #fff;
}
.cardtype{
  position: absolute;
  bottom: 40rpx;
  left: 50rpx;
  font-size: 16px;
  color: #fff;
}
.cardInfo{
  width: 712rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 15rpx;
  position: relative;
  border: 1px solid #dedede;
  border-top: none;
  padding-bottom: 251rpx;
}
.codewrap{
  width: 140rpx;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  position: absolute;
  top: -30rpx;
  left: 300rpx;
  background: #fff;
}
.qrcode{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #000;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.qrcode image{
  width: 51rpx;
  height: 51rpx;
}
.white{
  height: 130rpx;
}
.slidecode{
  width: 100%;
  text-align: center;
}
.slidecode image{
  width: 560rpx;
  height: 105rpx;
}
.cardNum{
  width: 100%;
  text-align: center;
  font-size: 14px;
  color:#999;
  line-height: 1.8;
}
.detail {
  height: 100rpx;
  margin: 0 25rpx;
  display: flex;
  border-top: 1px solid #dedede;
  line-height: 100rpx;
  font-size: 16px;
  justify-content: space-between;
  /* border-bottom: 1px solid #dedede; */
}
.detail view:last-child{
  color: #efd20d;
}
.cardInfo>view:last-child{
  border-bottom: 1px solid #dedede;
}