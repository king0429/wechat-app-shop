<view class='container-full'>
  <view class='cardBG'>
    <image src='/pages/source/images/membership.png'></image>
    <text class='shopname'>{{shopName}}</text>
    <text class='cardtype'>VIP·{{cardType}}</text>
  </view>
  <view class='cardInfo'>
    <view class='codewrap'>
      <view class='qrcode'>
        <image src='/pages/source/images/qrcode.png'></image>
      </view>    
    </view>
    <view class='white'></view>
    <view class='slidecode'>
      <image src='/pages/source/images/slidecode.png'></image>
    </view>
    <view class='cardNum'>{{cardNum}}</view>
    <view class='detail'>
      <view>可用余额</view>
      <view>¥{{balance}}</view>
    </view>
    <view class='detail'>
      <view>会员积分</view>
      <view>{{points}}</view>
    </view>
  </view>
</view>