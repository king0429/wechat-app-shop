page{
  min-height: 100%;
  background: #fff;
}
.section{
  padding: 0 20rpx;
  background: #fff;
  font-size: 14px;
  padding-bottom: 20rpx;

}
.section view{
  display: flex;
}
.section view:nth-child(2){
  margin-bottom: 20rpx;
}
.title{
  line-height: 2.8;
  color: #333;
  font-size: 16px;
}
.item{
  display: flex;
  align-items: center;
  line-height: 3;
  /* border: 1px solid #dedede; */
}
.item text{
  display: block;
  width: 18%;
}
.item input{
  border:1px solid #dedede;
  width: 70%;
  padding:10rpx;
}
.bind{
  width: 100%;
  background: #38adff;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
}
.tip{
  line-height: 1.3;
  text-align: center;
  color: #ff0100;
}