<view class='container'>
  <view class='section'>
    <view class='title'>申请成为分销商</view>
    <view class='item'>
      <text>姓名</text>    
      <input placeholder='请输入您的姓名' bindinput='getName' style='border:{{border1}}'></input>
    </view>
    <view class='item'>
      <text>手机号码</text>
      <input type='number' bindinput='getNum' placeholder='请输入您的手机号码' style='border:{{border}}'></input>
    </view>
    <view wx:if="{{show=='1'}}" class='tip'>请输入正确的手机号</view>
    <view wx:if="{{show1=='1'}}" class='tip'>请输入您的姓名</view>
  </view>
  <view class='bind' bindtap='sub'>提交</view>
</view>