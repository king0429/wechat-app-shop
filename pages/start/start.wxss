/* pages/start/start.wxss */
.banner image{
  height: 720rpx;
  width: 100%;
}
.header{
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}
.caption{
  width:100rpx;
  height: 100rpx;
  border: 1px solid #f09900;
  border-radius: 50%;
  position: relative;
  margin-right: 20rpx;
}
.caption text{
  position: absolute;
  top: -12rpx;
  left: -8rpx;
  font-size: 14px;
  padding: 3rpx;
  background: #f09900;
  border: 1px solid #fff;
  color: #fff;
  border-radius: 15rpx;
}
.caption image{
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  margin: 5rpx;
}
.joiner{
  height: 100rpx;
  width: 100rpx;
  border: 1px dashed #999;
  border-radius: 50%;
  color: #999;
  text-align: center;
  line-height: 100rpx;
  margin-right:20rpx;
}
.time{
  text-align: center;
  line-height: 1.8;
  font-size: 14px;
}
.invite-btn{
  width: 600rpx;
  height: 80rpx;
  margin: 20rpx auto;
  background: #ff0100;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  border-radius: 5px;
  font-size: 14px;
}
.break{
  height: 30rpx;
  background: #f0f0f0;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
}
.info{
  padding: 0 20rpx;
  font-size: 14px;
}
.info view {
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #dedede;
  color: #333;
}
.info view:last-child text:last-child{
  color: #999;
}