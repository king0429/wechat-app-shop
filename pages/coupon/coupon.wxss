page{
  width: 100%;
  height: 100%;
  background: #f8f8f8;
}
.top{
  height: 100rpx;
}
.header{
  display: flex;
  font-size: 16px;
  height: 100rpx;
  background: #fff;
  border-bottom: 1px solid #dedede;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 99;
}
.header view{
  width: 50%;
  text-align: center;
  line-height: 100rpx;
}
.header text{
  display: inline-block;
  height: 95rpx; 
}
.sel{
  border-bottom: 3px solid #ff0100;
  color: #ff0100;
}
swiper{
  height: 700rpx;
}
.board{
  padding: 20rpx;
  font-size: 16px;
}
.coupon{
  height: 180rpx;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  border-radius: 6rpx;
}
.coupon>view:first-child{
  width: 30%;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
  border-right: 2px dashed #dedede;
}
.coupon>view:first-child view:first-child{
  margin-left: 20rpx;
}
.coupon>view:first-child view:last-child{
  line-height: 2.4;
  text-align: center;
}
.coupon>view:first-child view:last-child text:first-child{
  font-size: 30px;
  font-weight: 200;
  margin-right: 6rpx;
}
.coupon>view:last-child{
  width: 60%;
  position: relative;
}.coupon>view:last-child view{
  margin-left: 60rpx;
}
.coupon>view:last-child view.tip{
  position: absolute;
  top:-20rpx;
  right: -56rpx;
  background: rgba(255, 1, 0, .5);
  color: #fff;
  padding: 10rpx;
  font-size: 14px;
}
.coupon>view:last-child view.demand{
  margin-top: 12rpx;
  line-height: 2;
  font-size: 18px;
}
.coupon>view:last-child view.info{
  font-size: 16px;
  color: #333;
  line-height: 1.6;
}
.coupon>view:last-child view.time{
  font-size: 14px;
  color: #999;
  line-height: 1.6;
}
.shop{
  border-left:3px solid #38adff;
  color: #38adff;
}
.online{
  border-left: 3px solid #fad938;
  color: #fad938;
}
.overdate{
  border-left: 3px solid #dedede;
  color: #999;
}