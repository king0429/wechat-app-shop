/* pages/paycar/paycar.wxss */
page{
  min-height: 100%;
  background: #f0f0f0;
  width: 100%;
}
.paycarItem,.paycarList{
  width:100%;
  background: #fff;
}
.break{
  height: 20rpx;
  background: #f0f0f0;
}
.item{
  height: 240rpx;
  white-space: nowrap;
}
.main{
  background: #fff;
  display: inline-flex;
  height: 100%;
  width: 100%;
}
.del{
  display: inline-block;
  width: 160rpx;
  background: red;
  color: #fff;
  height: 100%;
  line-height: 260rpx;
  text-align: center;
  font-size: 16px;
}
.left{
  width: 12%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.main .left image,.sum .left image{
  width: 36rpx;
  height: 36rpx;
}
.main .right{
  display: flex;
  width: 88%;
}
.main .right>view:first-child{
  display: flex;
  align-items: center;
}
.main .right image{
  width: 180rpx;
  height: 180rpx;  
}
.itemInfo{
  padding-left: 20rpx;
  font-size: 16px;
  margin-top: 35rpx;
}
.itemInfo>view:first-child{
  width: 430rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #666;
}
.itemInfo>view:nth-child(2){
  font-size: 14px;
  color:#999;
  line-height: 1.6;
  margin-top: 20rpx;
}
.itemInfo>view:last-child{
  width: 420rpx;
  display: flex;
  justify-content: space-between; 
  line-height: 1.8;
  margin-top: 16rpx;
}
.itemInfo>view:last-child text:first-child{
  color: #ff0100;
}
.itemInfo>view:last-child text:last-child{
  color: #999;
}
.sum{
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  background: #fff;
  width: 100%;
}
.sum .left{
  width: 30%;
  margin-left: 20rpx;
  font-size: 14px;
  color: #999;
}
.sum .left image{
  margin: 20rpx;  
}
.sum .right{
  display: flex;
  justify-content: flex-end;
}
.sum .right view:first-child{
  width: 320rpx;
  color: #999;
  text-align: center;
  line-height: 100rpx;
  font-size: 16px;
}
.sum .right view:first-child text{
  color: #f19249;
}
.sum .right view:last-child{
  width: 240rpx;
  line-height: 100rpx;
  color: #fff;
  background: #f19249;
  text-align: center;
}