/* pages/appointment/appoinment.wxss */
page{
  width: 100%;
  height: 100%;
}
.container-full{
  min-height: 100%;
  background: #f0f0f0;
}
.white{
  height: 30rpx;
  border-top: 1px solid #dedede;
}
picker{
  margin-bottom: 20rpx;
  color: #333;
}
.picker{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  background: #fff;
  padding: 0 20rpx;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
  font-size: 16px;
}
.picker image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 15rpx;
}
.picker view:nth-child(2){
  display: flex;
  align-items: center;
  align-content: center;
  color: #333;
}
picker.date{
  margin-bottom: 0;
  border-bottom: none;
}
.timepicker{
  background: #fff;
  padding: 20rpx 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  color: #333;
  border-bottom: 1px solid #dedede;
}
.timeTab{
  width: 45%;
  height: 140rpx;
  border: 1px dashed #dedede;
  margin: 10rpx 0;
  text-align: center;
  color: #333;
  font-size: 16px;
}
.timeSel{
  width: 45%;
  height: 140rpx;
  border: 1px solid #38adff;
  margin: 10rpx 0;
  text-align: center;
  color: #333;
  font-size: 16px;
}
.time,.mumber{
  line-height: 70rpx;
}
.btn{
  width: 100%;
  height: 100rpx;
  color: #fff;
  font-size: 16px;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  background: #38adff;
}