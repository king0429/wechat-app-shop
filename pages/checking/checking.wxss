page{
  height: 100%;
  background: #f0f0f0;
}
.white{
  height: 20rpx;
}
.banner{
  margin-bottom: 20rpx;
  background: #fff;
  font-size: 14px;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
}
.bannerTitle{
  padding: 0 30rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  border-bottom: 1px solid #dedede;
}
.bannerTitle>view:last-child{
  color: #38adff;
}
.bannerInfo{
  padding: 0 30rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #dedede;
}
.bannerInfo image{
  width: 140rpx;
  height: 140rpx;
}
.bannerInfo view{
  font-size: 16px;
  margin-left: 20rpx;
}
.bannerPrice{
  height: 80rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
}
.bannerPrice>view:last-child{
  color:#ff0100;
}