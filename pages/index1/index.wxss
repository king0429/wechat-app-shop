/**index.wxss**/
page{
  background: rgb(248, 248, 248)
}
html{
  width: 100%;
  font-size: 16px;
}
/*轮播图  */
.header{
  width: 100%;
  height: 400rpx;
}
.header image{
  width: 100%;
}
/* 按钮组列表 */
.nav{
  width: 100%;
  height: 130rpx;
  padding:2% 0 ;
  display: flex;
  text-align: center;
  font-size: 12px;
  background: rgb(255, 255, 255);
}
.menu{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.menu image{
  width: 50%;
  height: 70%;
  margin-left: 25%;
}
.menuTitle {
  margin-top: 5px;
}
/*商品列表  */
.wrap{
  width: 100%;
  background: #fff;
}
.info-item{
  background: #fff;
}
.info-title{
  height:40rpx;
  font-size: 28rpx;
  padding-top: 15rpx;
  line-height: 50rpx;
  /* padding-left: 20rpx; */
}
.info-title text{
  display: block;
  width: 18%;
  border-left: 5px solid #00a0e9;
  line-height: 40rpx;
  color: #999;
  margin-left: 10rpx;
  text-align: center;
}
.info-list{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}
.item-card{
  width:48%;
  border: 1px solid #dedede;
  font-size: 16px;
  color: #333;
  margin-top: 20rpx;
}
.item-card image{
  height: 320rpx;
  width: 100%;
}
.itemTitle{
  padding: 0 10rpx;
}
.itemPrice{
  color: #fe0100;
  padding: 0 10rpx;
  line-height: 1.5;
}
.itemStatus{
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;  
  margin-bottom: 10rpx;
  color: #999;
  font-size: 14px;
}
/* 终端留白 */
.break{
  height: 20rpx;
}
.imgbox{
  width: 100%;
  height: 420rpx;
  display: flex;
  background: #fff;
}
.imgbox view{
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.imgbox view image{
  width: 80%;
  height: 420rpx;
}
/*单行文本  */
.slogan{
  padding: 0 20rpx;
  font-size: 16px;
  line-height:2.2;
  background: #fff;

}
.slogan view{
  width: 100%;
}