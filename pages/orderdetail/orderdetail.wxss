page{
  height: 100%;
  width: 100%;
  background: #f0f0f0;
}
.white{
  height: 30rpx;
}
.banner{
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  height: 190rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  background: #fff;
  color: #333;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
}
.bannerLeft{
  display: flex;
  width: 70%;
}
.banner>view:last-child{
  font-size:16px;
  color: #ff0100;
  line-height: 2.0;
}
.bannerLeft>view:last-child :first-child{
  line-height: 2.2;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 16px;
}
.banner image{
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
}
.state{
  height: 120rpx;
  padding: 30rpx;
  border-top:1px solid #dedede;
  border-bottom: 1px solid #dedede;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  font-size: 14px;
}
.state>view{
  display: flex;
  width: 16.7%;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
view.done{
  width: 40rpx;
  height:40rpx;
  border-radius: 50%;
  background: #fe807e;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ff0100;
}
view.done>view{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #ff0100;
}
.donot{
  width: 40rpx;
  height:40rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #dedede;
}
.donot>view{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #dedede; 
}
.doing{
  background:rgba(241,145,73,.5);
}
.doing view{
  background: rgb(241, 145, 73);
}

.address{
  padding: 0 30rpx;
  display: flex;
  background: #fff;
  height: 120rpx;
  font-size: 14px;
  align-items: center;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
  margin-bottom: 20rpx;
  line-height: 1.8;
  color: #999;
}
.address image{
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}
.orderInfo{
  padding: 20rpx 30rpx;
  height: 140rpx;
  background: #fff;
  font-size: 14px;
  line-height: 1.3;
  color: #999;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
  margin-bottom: 20rpx;
}

.server{
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
  background: #fff;
  font-size: 16px;
  color: #333;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
  position: relative;
}
.server>view{
  width: 50%;
  height: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.server image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.server>view:first-child{
  border-right: 1px solid #dedede;
}
view.red{
  color: #ff0100;
}
view.btn{
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;  
  justify-content: space-between;
  font-size: 16px;
}
view.btn view{
  height: 100rpx;
  line-height: 100rpx;
  background: #38adff;
  color:#fff;
  display: flex;
  justify-content: center;
}
view.btn view:nth-child(2){
  background: #ff0100;
}
view.yellow{
  color: rgb(241, 145, 73);
}
.contact{
  position: absolute;
  opacity: 0;
}