/* pages/piece/piece.wxss */
html,page{
   height: 100%; 
}
.banner{
  padding: 20rpx 15rpx;
  border-top: 1px solid #dedede;
  display: flex;
  border-bottom: 1px solid #dedede;
}
.bannerLeft{
  padding-right: 15rpx;
}
.bannerLeft image{
  width: 300rpx;
  height: 300rpx;
}
.bannerRight{
  font-size: 14px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 30rpx;
  width: 50%;
}
.bannerTitle{
  width: 90%;
  margin-top: 15rpx;
  font-size: 16px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
}
.bannerRight>view:nth-child(2){
  color: #999;
  line-height: 1.5;
}
.price text:nth-child(1){
  color: #ff0100;
  margin-right: 30rpx;
  font-size: 16px;
  line-height: 1.6;
  margin-top: 10rpx;
}
.tip{
  height: 80rpx;
  display: flex;
  background: #f0f0f0;
}
.tip>view{
  width: 33%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 14px;
}
.tip image{
  width: 25rpx;
  height: 25rpx;
  margin-right: 6rpx;
}
.join {
  border-top: 1px solid #dedede;
  padding: 30rpx 0;
}
.headerList{
  display: flex;
  align-content: center;
  justify-content: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}
.headerList>view{
  border-radius: 50%; 
  border: 1px solid #f39900;
  height: 100rpx;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx 20rpx;
}
.headerList image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.initiate{
  position: relative;
}
.initiate text{
  position: absolute;
  top: -15rpx;
  left: -10rpx;
  font-size: 12px;
  padding: 5rpx;
  background: #f09900;
  border: 1px solid #fff;
  color: #fff;
  border-radius: 15rpx;
  text-align: center;
}
view.wait{
  border: 1px dashed #999;
  color: #999;
  line-height: 100rpx;
  text-align: center;
}
.lastTime{
  text-align: center;
  font-size: 14px;
  margin-bottom: 20rpx;
}
.lastTime text{
  color: #ff0100;
}
.joinBtn{
  width: 600rpx;
  margin: 0 auto;
  color: #fff;
  background: #ff0100;
  text-align: center;
  line-height: 70rpx;
  border-radius: 5px;
  font-size: 14px;
  height: 70rpx;
}
.notice{
  height: 90rpx;
  display: flex;
  font-size: 14px;
  padding: 0 35rpx;
  justify-content: space-between;
  line-height: 90rpx;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
  color: #333;
}
.notice view:last-child{
  color: #999;
}
.notice view:last-child text{
  margin-right: 15rpx;
  font-size: 12px;
}
.info-title{
  height:40rpx;
  font-size: 28rpx;
  padding-top: 15rpx;
  line-height: 40rpx;
}
.info-title text{
  display: block;
  width: 22%;
  border-left: 5px solid #00a0e9;
  line-height: 40rpx;
  color: #999;
  margin-left: 10rpx;
  text-align: center;
  font-size: 16px;
}
.info-item{
  padding: 0 32rpx;
  position: relative;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  height: 328rpx;
}
.info-item image{
  width: 100%;
  height: 100%;
}
.info-item .cat{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;  
  position: absolute;
  top: -20rpx;
  right: 13rpx; 
  text-align: center;
  color: rgba(255, 255, 255, .8);
  background: rgba(0, 0, 0, .6);
  font-size: 14px;
}
.item-list{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.item-card{
  width:48%;
  border: 1px solid #dedede;
  font-size: 16px;
  color: #333;
  margin-top: 20rpx;
}
.item-card image{
  height: 320rpx;
  width: 100%;
}
.itemTitle{
  padding: 0 10rpx;
}
.itemPrice{
  color: #ff0100;
  padding: 0 10rpx;  
}
.itemStatus{
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;  
  margin-bottom: 10rpx;
  color: #999;
}
.model{
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, .7);
  position: fixed;
  top: 0;
  left: 0; 
  display: flex;
  align-items: flex-end;
}
.select{
  width: 100%;
  background: #fff;
  padding: 0 25rpx;
  height: 900rpx;
}
.select .info {
  height: 120rpx;
  position: relative;
  border-bottom: 1px solid #dedede;
  padding-top: 40rpx;
}
.select .info image:first-child{
  width: 220rpx;
  height: 220rpx;
  border-radius: 5px;
  border: 1px solid #dedede;
  position: absolute;
  bottom: 25rpx;
}
.select .info view{
  margin-left: 300rpx;
  font-size: 16px;
  color: #333;
}
.select .info>view:nth-child(2){
  color: #ff0100;
  font-size: 18px;
  line-height: 1.2;
}
.select .info>view:nth-child(3){
  font-size: 14px;
  line-height: 1.2;
  margin-top: 10rpx;
}
.select .info image:last-child{
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: -14rpx; 
  top: 13rpx; 
}
.color{
  padding: 20rpx 0;
  border-bottom: 1px solid #dedede;
}
.color view:first-child{
  font-size: 14px;
  line-height: 18px;
}
.color view:last-child{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.color view:last-child text{
  display: block;
  padding: 0 20rpx;
  height: 60rpx;
  font-size: 12px;
  text-align: center;
  background: #eaeaea;
  border-radius: 5px;
  line-height: 60rpx;
  color: #333;
  margin:20rpx 50rpx 0 0;
}
.size{
  padding: 20rpx 0;  
  border-bottom: 1px solid #dedede;
}
.size view:first-child{
  font-size: 14px;
  line-height: 18px;
}
.size view:last-child{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.size view:last-child text{
  display: block;
  padding: 0 20rpx;
  height: 52rpx;
  font-size: 12px;
  text-align: center;
  background: #eaeaea;
  border-radius: 3px;
  line-height: 52rpx;
  color: #333;
  margin:20rpx 50rpx 0 0;
}
.cal{
  display: flex;
  flex-direction: row-reverse;
  height: 110rpx;
  border-bottom: 1px solid #dedede;
}
.cal view{
  height: 60rpx;
  width: 90rpx;
  text-align: center;
  background: #dbdbdb;
  border-radius: 3px;
  margin: 25rpx 0;
  line-height: 60rpx;
}
.cal view:nth-child(2){
  margin: 25rpx 10rpx;
  font-size: 14px;
}
.white{
  height: 110rpx;
  /* border-bottom: 1px solid #dedede; */
}
.scroll{
  height: 640rpx;
  overflow: scroll;
  overflow-y: scroll;
}
 .btn-buy{
  width: 100%;
  color: #fff;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #ff0100;
  font-size: 14px;
} 
.color view:last-child text.colorSel{
  background: #ff0100;
  color: #fff;
}
 .size view:last-child text.sizeSel{
  background: #ff0100;
  color: #fff;
} 
.server{
  height: 100%;
  width: 100%;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
}