page{
  min-height: 100%;
  background: #f8f8f8;
}
.listTitle{
  font-size: 14px;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #dedede;
}
.listTitle text{
  display: inline-block;
  border-bottom: 3px solid #38adff;
  height: 93%;
  margin-left: 20rpx;
  color: #333;
  padding-right: 30rpx;
}
.listInfo{
  padding: 20rpx 30rpx;
  font-size: 14px;
}
.listItem{
  display: flex;
  height: 130rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #dedede;
}
.listItem view:first-child{
  display: flex;
  align-items: center;
  width: 70%;
}
.goods{
  width: 60%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 15rpx;
}
.listItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.money{
  color: #bbb;
}