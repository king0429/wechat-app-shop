/* pages/address/address.wxss */
page{
  font-size: 14px;
  background: #f8f8f8;
  min-height: 100%;
}
.default image{
  width: 30rpx;
  height: 30rpx;
}
.edit image{
  width: 30rpx;
  height: 30rpx;
}
.item{
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
}
.sudo{
  display: flex;
  margin-top: 20rpx;
  justify-content: space-between;
  height: 40rpx;
  font-size: 14px;
}
.edit{
  height: 100%;
  display:flex;
  align-items: center;
}
.edit view{
  display: flex;
  align-items: center;
  color: #999;
}
.edit view:first-child{
  margin-right: 10rpx;
}
.default{
  display: flex;
  align-items: center;
}
.default text{
  margin-left: 15rpx;
}
.break{
  height: 20rpx;
}
.address{
  margin-bottom: 100rpx;
}
.add{
  width: 100%;
  height: 80rpx;
  background: #38adff;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.model{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, .5);
  top: 0;
  left: 0;
}
.window{
  background: #fff;
  width: 80%;
  padding: 20rpx;
  border-radius: 10rpx;
  position: relative;
}
.wintitle{
  line-height: 3.2;
  text-align: center;
}
.wininput{
  display: flex;
  margin-bottom: 30rpx;
}
.wininput input{
  padding: 2%;
  line-height: 2.6;
  color: #666;
  border-bottom: 1px solid #dedede;
  border-top: 1px solid #dedede;
}
.wininput input:first-child{
  border-right:1px solid #dedede;
}
.info input{
  border-top: 1px solid #dedede;
  padding: 20rpx 5rpx ;
  color: #666;
}
.name{
  line-height: 1.4
}
picker{
  line-height: 3.0;
  color: #666;
}
.sub{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #38adff;
  color: #fff;
}
.close{
  position: absolute;
  top: 5rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.room view{
  line-height: 1.6
}