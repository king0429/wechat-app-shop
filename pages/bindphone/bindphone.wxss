/* pages/bindphone/bindphone.wxss */
page{
  width: 100%;
  height: 100%;
}
.name{
  padding:0 20rpx;
  height: 80rpx;
  font-size: 14px;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
}
.name input{
  display: block;
  height: 100%;
  color: #999;
}
.del{
  display: flex;
  font-size: 14px;
  height: 80rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #dedede;
}
.del view:first-child{
  width: 70%;
  height: 100%;
  border-right: 1px solid #dedede;
}
.del view:first-child input{
  display:block;
  height: 100%;
  color: #999;
}
.del view:last-child{
  margin-left: 10rpx;
  width: 30%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.del view:last-child text{
  width: 100%;
  height: 100%;
  display: block;
  /* background: #ccc; */
  line-height: 80rpx;
  text-align: center;
  color: #999;
  font-size: 12px;
}
.bind{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background: #38adff;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin:0 auto;
  margin-top: 20rpx;
  font-size: 14px;
}