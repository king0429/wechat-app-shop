<view class='container'>
  <view class='name'>
    <input placeholder='请输入您的姓名' bindinput='getName'></input>
  </view>
  <view class='del'>
    <view>
      <input placeholder='请输入您的手机号码' bindinput='getDel'></input>    
    </view>
    <view>
      <text bindtap='{{identifying}}'>{{time}}</text>    
    </view>
  </view>
  <view class='name' style='border-top:none'>
    <input placeholder='请输入验证码' maxlength='6' bindinput='getPhonecode'></input>
  </view>
  <view class='bind' bindtap='bindphone'>绑定</view>
</view>
