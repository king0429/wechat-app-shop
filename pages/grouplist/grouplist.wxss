page{
  min-height: 100%;
  background: #fff;
  width: 100%;
  overflow: visible;
}
.nav{
  width: 100%;
  height:40px;
  white-space: nowrap;
  background: #fff;
  border-bottom: 1px solid #dedede;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}
.white{
  height: 42px;
}
.navItem{
  display: inline-block;
  font-size: 14px;
  padding: 0 20rpx;
  line-height: 80rpx;
  height: 100%;
}
.navItem text{
  display: inline-block;
  height:91%;
  color: #333;
}
.nav::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: #fff;
} 
.sel{
  border-bottom: 3px solid #ff0100;
}
.wrap{
  background: #fff;
  margin-top: 40px;
  font-size: 14px;
}
.info-title{
  height:40rpx;
  padding-top: 15rpx;
  font-size: 14px;
  line-height: 40rpx;
}
.info-title text{
  display: block;
  width: 18%;
  border-left: 5px solid #00a0e9;
  line-height: 40rpx;
  color: #999;
  margin-left: 10rpx;
  text-align: center;
}