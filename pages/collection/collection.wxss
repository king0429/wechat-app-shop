page{
  width: 100%;
  min-height: 100%;
  background: #f8f8f8;
}
.collection{
  width: 100%;
}
.detail{
  height: 180rpx;
  display: flex;
  padding: 0 20rpx;
  font-size: 16px;
  justify-content: space-between;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
  align-items: center;
}
.collection>.detail:first-child{
  border-top:1px solid #dedede;
}
.collection>.detail:last-child{
  border-bottom: 1px solid #dedede;
}
.white{
  width: 100%;
  height: 20rpx;
}
.detailLeft{
  width: 70%;
  display: flex;
  height: 100%;
  align-items: center;
}
.title{
  margin-left: 20rpx;
  color: #333;
  line-height: 3.3;
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.detail image{
  width: 160rpx;
  height: 160rpx;
}
.detailRight{
  font-size: 14px;
}
.detailRight view:last-child{
  color: #999;
}
.wrap{
  width: 100%;
  height: 150rpx;
}
.push{
  background: #fff;
}
.model{
  width:100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.model .window{
  width: 400rpx;
  padding: 50rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  font-size: 16px;
}
.window> view:first-child{
  line-height: 3.5;
}
.window>view:last-child{
  display: flex;
}
.window>view:last-child view{
  width: 50%;
  text-align: center;
  line-height: 2.4
}
.hover{
  opacity: .8;
  background: rgba(245, 245, 245, .9);
}
