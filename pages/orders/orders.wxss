
page{
  height: 100%;
  background: #f0f0f0;
}
.banner{
  height:80rpx; 
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
  font-size: 14px;
  color: #999;
  position: fixed;
  top: 0;
  left: 0;
  width: 710rpx;
  background: #fff;
  z-index: 9;
}
.bannerItem{
  position: relative;
  padding: 0 10rpx;
  overflow: hidden;  
  background: #fff;
}
.banner .navleft{
  position: absolute;
  height: 3rpx;
  border-bottom: 3px solid #ff0100;
  width: 100%;
  bottom: 0;
  left: -120rpx;
}
.banner .navright{
  position: absolute;
  height: 3rpx;
  border-bottom: 3px solid #ff0100;
  width: 100%;
  bottom: 0;
  left: 120rpx;
}
.navSeleted{
  position: absolute;
  height: 3rpx;
  border-bottom: 3px solid #ff0100;
  width: 100%;
  bottom: 0;
  left: 0;
  transition: all .5s;    
}
swiper{
  padding-top: 80rpx;
}
.orderItem{
  height:425rpx;
  border-top: 1px solid #dedede;  
  border-bottom: 1px solid #dedede;
  font-size: 14px;
}
.break{
  height: 15rpx;
  background: #f8f8f8;
}
.time{
  padding: 0 40rpx;
  display: flex;
  justify-content:space-between;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: 1px solid #dedede;
}
.time view:nth-child(2){
  color: #ff0100;
}
.orderInfo{
  padding: 40rpx;
  background:#fff;
  display: flex;
  justify-content: space-between;
  color: #333;
  padding-bottom: 0;
}
.orderInfo image{
  width: 160rpx;
  height: 160rpx;
}
.orderInfo view:first-child{
  display: flex;
  width: 70%;
}
.orderInfo view:first-child view:last-child{
  margin-left: 30rpx;
  width: 60%;
  line-height: 1.8;
  font-size: 16px;
}
.orderInfo view:last-child view:last-child{
  color: #999;
  line-height: 1.6
}
.pay{
  padding: 0 40rpx;
  text-align: end;
  height: 60rpx;
  line-height: 60rpx;
  color:#333;
  border-bottom: 1px solid #dedede;
  background: #fff;
}
.btnList{
  height: 80rpx;
  padding: 0 40rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  background: #fff;
}
.btnList view{
  height: 60%;
  margin-left: 20rpx;
  line-height: 48rpx;
  color: #666;
  border: 1px solid #dedede;
  padding: 0 20rpx;
  border-radius: 10rpx;
}
.btnList view:first-child{
  padding:0 20rpx;
  background: #ff0100;
  color: #fff;
  border-radius: 10rpx;
  border: 1px solid #ff0100;
  font-size: 14px;
}
.footer{
  background: #f0f0f0;
  text-align: center;
  font-size: 14px;
  color: #999;
  line-height: 1.8;
  margin-top: 20rpx;
}
.priceBox{
  width: 30%;
  text-align: end;
}
.priceBox view:first-child{
  display: block;
  width: 100%;
  text-align: end;
}