page{
  height: 100%;
  background: #f0f0f0;
}
.container{
  height: 100%;
}
.item-title{
  height: 100rpx;
  padding: 0 20rpx;
  background: #fff;
  line-height: 100rpx;
  font-size: 16px;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
  color: #333;
}
.item{
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx;
  font-size: 16px;
  align-items: center;
  border-bottom: 1px solid #dedede;
  color: #999;
}
.break{
  height: 20rpx;
}
.bind{
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color:#999;
  position: relative;
}
.bind image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
}
.bind-btn{
  margin-top: 20rpx;
  width: 20%;
  background: #38adff;
  color: #fff;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12px;
  border-radius: 3px;
}