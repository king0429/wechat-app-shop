page{
  height: 100%;
  background: #38adff;
}
.process{
  width: 700rpx;
  margin: 0 auto;
  background: #fff;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
  border-radius: 12rpx;
  color: #999;
  padding-bottom: 70rpx;
}
.proTitle{
  margin: 80rpx 0 60rpx 0;
}
.process view:nth-last-of-type(odd){
  line-height: 3.3;
}
button.btn-share{
  border: none;
  width: 90%;
  margin-top: 200rpx;
  background: #38adff;
  color: #fff;
  font-size: 14px;
  height: 80rpx;
  line-height: 80rpx;
}