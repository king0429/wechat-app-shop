page{
  height: 100%;
  background: #38adff;
}
.binded{
  width: 700rpx;
  background: #fff;
  margin: 50rpx auto;
  border-radius: 9rpx;
  padding-top: 200rpx;
  padding-bottom: 60rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 14px;
  color: #999;
}
.binded image{
  width: 100rpx;
  height: 100rpx;
}
.bindedTitle{
  font-size: 18px;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
  line-height: 2.1;
}
.done{
  line-height: 1.4;
}
.btn-show{
  margin-top: 400rpx;
  width: 600rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 16px;
  color: #fff;
  background: #38adff;
  border-radius: 6rpx;
}
.unbind{
  width: 660rpx;
  background: #fff;
  margin: 50rpx auto;
  border-radius: 9rpx;
  padding: 0 20rpx;
  padding-top: 200rpx;
  padding-bottom: 60rpx;
  font-size: 14px;

}
.bindItem{
  height: 160rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
}
.bindItem view{
  width: 20%;
}
.bindItem input{
  padding: 0 8rpx;
  border-bottom: 1px solid #dedede;
  width: 500rpx;
}
.btn-bind{
  margin: 0 auto;
  margin-top: 270rpx;
  width: 600rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 16px;
  color: #fff;
  background: #38adff;
  border-radius: 6rpx; 
}
.model {
  height: 100%;
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.window{
  background: #fff;
  width: 600rpx;
  position: relative;
  padding: 100rpx 20rpx;
  border-radius: 12rpx;
}
.appealTitle{
  line-height: 1.6;
  font-size: 16px;
  margin-bottom: 50rpx;
}
.appeal{
  height: 150rpx;
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
}
.appeal input{
  border-bottom: 1px solid #dedede;
  width: 90%;
  font-size: 14px;
}
.btn-sub{
  width: 90%;
  margin:0 auto;
  background: #38adff;
  height: 90rpx;
  color: #fff;
  line-height: 90rpx;
  font-size: 16px;
  text-align: center;
  border-radius: 6rpx;
  margin-top: 140rpx;
}
.close{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 15rpx;
  top: 20rpx;
}
.status{
  width: 700rpx;
  background: #fff;
  margin: 0 auto;
  height: 1000rpx;
  margin-top: 80rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #999;
}
.status image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}
.status view:nth-child(2){
  margin-bottom: 60rpx;
}
.TIP{
  width: 100%;
  font-size: 12px;
  color: #fff;
  text-align: center;
  margin-top: 10rpx;
}